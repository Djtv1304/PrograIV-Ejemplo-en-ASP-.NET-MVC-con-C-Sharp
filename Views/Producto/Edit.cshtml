@model Producto
@{
    ViewData["Title"] = "Editar Productos";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group mb-3">

        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre">

    </div>
    <div class="form-group mb-3">

        <label>Descripción</label>
        <input asp-for="Descripcion" class="form-control" placeholder="Ingrese la descripción">

    </div>
    <div class="form-group mb-3">

        <label>Cantidad</label>
        <input asp-for="Cantidad" class="form-control" placeholder="Ingrese la cantidad">

    </div>

    <div class="row col-6">
        <div class="col-6 col-md-6">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        <div class="col-6 col-md-6">
            <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
        </div>
    </div>


</form>

<p>Esta es la vista para editar productos</p>